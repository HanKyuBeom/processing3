int val = 0;

void setup(){
  size(600,600);
  
}

void draw(){
  val = mouseX;
  
  if(val < width/3){
    background(255,0,0);
  } else if (val < 2*width/3){
    background(0,255,0);
  } else {
    background(0,0,255);
  }
  line(width/3, 0, width/3, height);
  line(2*width/3,0,2*width/3,height);
}
